---
import MainLayout from "@/layouts/main.astro";
import { siteConfig } from "@/config/site";
import { defaultLanguage, getDictionary } from "@/i18n/config";
import Button from "@/components/ui/astro/Button.astro";

const lang = defaultLanguage;
const dict = getDictionary(lang);
const pathname = Astro.url.pathname;
---

<MainLayout
  lang={lang}
  dict={dict}
  pathname={pathname}
  title="404"
  description={dict["not_found_body"] || "Page not found"}
  robots="noindex,follow"
  jsonLd={[
    {
      "@type": "BreadcrumbList",
      itemListElement: [
        { "@type": "ListItem", position: 1, name: "Home", item: siteConfig.siteUrl },
        { "@type": "ListItem", position: 2, name: "404", item: `${siteConfig.siteUrl}/404/` },
      ],
    },
  ]}
>
  <div class="flex min-h-[60vh] flex-col items-center justify-center text-center">
    <p class="text-sm uppercase tracking-[0.2em] text-muted-foreground">404</p>
    <h1 class="mt-2 text-3xl font-bold">{dict["not_found_heading"] || "Page not found"}</h1>
    <p class="mt-3 max-w-xl text-muted-foreground">
      {dict["not_found_body"] || "Sorry, we couldnâ€™t find what you were looking for."}
    </p>
    <div class="mt-6 flex flex-wrap items-center justify-center gap-3">
      <Button href="/" size="lg" className="px-6 py-3 text-sm">
        {dict["not_found_cta_home"] || "Go to homepage"}
      </Button>
      <Button
        type="button"
        variant="outline"
        size="lg"
        className="px-6 py-3 text-sm"
        onClick="history.back()"
      >
        {dict["not_found_cta_back"] || "Go back"}
      </Button>
    </div>
  </div>
</MainLayout>
